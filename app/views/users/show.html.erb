<div class="container">
  <div class="columns is-centered">
    <div class="column is-8">
      <div class="box">
        <div class="level mb-5">
          <div class="level-left">
            <div class="level-item">
              <div class="icon-text">
                <span class="icon is-large">
                  <i class="fas fa-user-circle fa-3x"></i>
                </span>
              </div>
            </div>
            <div class="level-item">
              <div class="ml-4">
                <h1 class="title is-4 mb-2 has-text-break" style="max-width: 400px;"><%= @user.email %></h1>
              </div>
            </div>
          </div>
          <div class="level-right">
            <div class="level-item">
              <%= link_to "Back to Users", users_path, class: "button is-light" %>
            </div>
          </div>
        </div>

        <hr class="mb-5">

        <div class="columns">
          <div class="column">
            <div class="box has-background-light">
              <h2 class="title is-5 mb-4">Account Information</h2>
              <div class="content">
                <table class="table is-fullwidth">
                  <tbody>
                    <tr>
                      <th style="width: 150px;">Email</th>
                      <td class="has-text-break" style="max-width: 400px;"><%= @user.email %></td>
                    </tr>
                    <tr>
                      <th>Created At</th>
                      <td><%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %></td>
                    </tr>
                    <tr>
                      <th>Last Updated</th>
                      <td><%= @user.updated_at.strftime("%B %d, %Y at %I:%M %p") %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <div class="columns mt-5">
          <div class="column">
            <div class="buttons">
              <%= link_to edit_user_registration_path, class: "button is-primary" do %>
                <span class="icon">
                  <i class="fas fa-edit"></i>
                </span>
                <span>Edit Profile</span>
              <% end %>
            </div>
            <p class="has-text-grey mt-4">
              <span class="icon">
                <i class="fas fa-calendar-alt"></i>
              </span>
              Member since <%= @user.created_at.strftime("%B %d, %Y") %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
