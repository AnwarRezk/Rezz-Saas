<div class="container">
  <div class="columns is-centered">
    <div class="column is-6">
      <div class="box">
        <%= render @member %>

        <div class="buttons mt-4">
          <%= link_to "Edit this member", edit_member_path(@member), class: "button is-warning" %>
          <%= link_to "Back to members", members_path, class: "button is-light" %>
          <%= button_to "Remove this member", @member, method: :delete, class: "button is-danger", form: { data: { turbo_confirm: "Are you sure?" } } %>
        </div>
      </div>
    </div>
  </div>
</div>
