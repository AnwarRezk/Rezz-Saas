<div class="container">
  <div class="box">
    <div class="level">
      <div class="level-left">
        <div class="level-item">
          <h1 class="title is-4">Users</h1>
        </div>
        <div class="level-item">
          <span class="tag is-info is-light"><%= @users.count %> users</span>
        </div>
      </div>
    </div>

    <div class="table-container">
      <table class="table is-striped is-hoverable is-fullwidth">
        <thead>
          <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Tenants</th>
            <th>Created At</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.email %></td>
              <td><%= user.tenants.compact.join(', ') if user.tenants %></td>
              <td><%= user.created_at.strftime("%B %d, %Y") %></td>
              <td>
                <%= link_to user_path(user), class: "button is-small is-info" do %>
                  <span class="icon">
                    <i class="fas fa-eye"></i>
                  </span>
                  <span>View</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
