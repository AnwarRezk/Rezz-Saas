<div class="container">
  <div class="columns is-centered">
    <div class="column is-5">
      <div class="box">
        <h2 class="title is-4 has-text-centered">Sign In</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: "label" %>
            <div class="control has-icons-left">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "Enter your email" %>
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
            </div>
          </div>

          <div class="field">
            <%= f.label :password, class: "label" %>
            <div class="control has-icons-left">
              <%= f.password_field :password, autocomplete: "current-password", class: "input", placeholder: "Enter your password" %>
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <div class="control">
                <label class="checkbox">
                  <%= f.check_box :remember_me %>
                  Remember me
                </label>
              </div>
            </div>
          <% end %>

          <div class="field">
            <div class="control">
              <%= f.submit "Sign In", class: "button is-primary is-fullwidth" %>
            </div>
          </div>
        <% end %>

        <div class="has-text-centered mt-4">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
